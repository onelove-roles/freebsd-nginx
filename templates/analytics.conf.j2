server {
    server_name analytics.{{ nginx_domain }};
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    ssl_certificate /etc/certs/{{ nginx_domain }}/fullchain.pem;
    ssl_certificate_key /etc/certs/{{ nginx_domain }}/privkey.pem;

    include ssl_params;
    root /usr/local/www/analytics.{{ nginx_domain }};
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    location ~ /\.ht {
        deny all;
    }
}
